{
    "name": "@viteplus/versions",
    "main": "dist/index.js",
    "type": "module",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.js",
    "author": "Garefild",
    "version": "1.0.0-local",
    "license": "Mozilla Public License Version 2.0",
    "description": "A versioning plugin for VitePress",
    "homepage": "https://viteplus.github.io/versions/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/viteplus/versions.git"
    },
    "bugs": {
        "url": "https://github.com/viteplus/versions/issues"
    },
    "keywords": [
        "vite",
        "plugin",
        "versions",
        "vitepress",
        "versioning"
    ],
    "engines": {
        "node": ">=20"
    },
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "components"
    ],
    "scripts": {
        "dev": "xbuild -w",
        "build": "xbuild",
        "test": "xjet",
        "test:coverage": "xjet --coverage",
        "preci:test": "xbuild",
        "lint": "npm run lint:md && npm run lint:eslint && npm run lint:typescript",
        "lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --ignore \"node_modules/**\"",
        "lint:eslint": "eslint . -c ./eslint.config.mjs",
        "lint:typescript": "xbuild --tc",
        "ci:test": "xjet",
        "ci:clean": "rm -rf ./dist",
        "ci:build": "npm run build",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "dependencies": {
        "vitepress": "^2.0.0-alpha.12",
        "@remotex-labs/xansi": "^1.3.2"
    },
    "devDependencies": {
        "eslint": "^9.35.0",
        "markdownlint-cli": "^0.45.0",
        "typescript-eslint": "^8.44.1",
        "eslint-plugin-tsdoc": "^0.4.0",
        "eslint-plugin-perfectionist": "^4.15.0",
        "@types/node": "^24.5.0",
        "@viteplus/versions": "^2.0.0",
        "@remotex-labs/xjet": "^1.1.1",
        "@remotex-labs/xbuild": "1.6.0"
    },
    "peerDependencies": {
        "vitepress": "^1.6.4"
    },
    "peerDependenciesMeta": {
        "vitepress": {
            "optional": true
        }
    }
